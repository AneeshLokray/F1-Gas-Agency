<html>
    <head>
        <link rel="stylesheet" href="userorders.css">
        <link rel="stylesheet" href="adminnav.css">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-c5wRJ/YFtGedrLmc5Qq7Bz9HJ1pIP+HXcYMYg/NGV7Oxsf+CTbnV7h+Z0zTKV7Qf9XJlZGKjYtr5w5w5FtRbMw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="https://kit.fontawesome.com/f19af38efd.js" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    </head>
    <body>

      <%- include('adminnavbar'); -%>

        
    <div class="search-container">
        <form action="/employeeorders" method="post">
          <input type="text" placeholder="Employee name" name="name">
          <button type="submit"><i class="fa fa-search"></i></button>
        </form>
      </div>

    <div style="text-align:center; background-color: #003366;padding:10px 0px;color:white">
        <h1>Employeeorders</h1>
    </div>

        <div class="xyz">
            
            <table>
              <tr>
                <th>Area</th>
                <th>Order Id</th>
                <th>Quantity</th>
                <th>Expected Date</th>
                <th>status</th>
              </tr>
              <% orders.forEach(function(order){ %>
              <tr>
                <td><%= order.personArea %></td>
                <td><%= order.orderId %></td>
                <td><%= order.quantity %></td>
                <td><%= order.deliveryDate %></td>
                <td><%= order.status %></td>
              </tr>
              <% }) %>
          </table>
          </div>

          <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

    </body>
</html>